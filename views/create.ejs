			<H2>Restaurant Create form</H2>
			<form action="/create" method="post" enctype="multipart/form-data">
				<div class="row">
					<div class="col-12 col-sm-6">
							<div class="form-group">
								<label>Name:</label>
								<input type="text" name="name" value="" />
							</div>
							<div class="form-group">
									<label>Borough:</label>
									<input type="text" name="borough" value="" />
							</div>		
							<div class="form-group">
									<label>Cuisine:</label>
									<input type="text" name="cuisine" value="" />
							</div>
								
							<div class="form-group">
									<label>Street:</label>
									<input type="text" name="street" value="" />
							</div>					
							<div class="form-group">
									<label>Building:</label>
									<input type="text" name="building" value="" />
							</div>		
					</div>
					
					<div class="col-12 col-sm-6">
							
							<div class="form-group">
									<label>Zipcode:</label>
									<input type="text" name="zipcode" value="" />
							</div>		
							<div class="form-group">
									<label>GPS Coordinate (lon.): </label>
									<input type="text" name="coordx" value="" />
							</div>		
							<div class="form-group">
									<label>GPS Coordinate (lat.): </label>
									<input type="text" name="coordy" value="" />
							</div>												
							<div class="form-group">
									<input type="file" name="filetoupload" />
							</div>			
							
							<input type="submit" value="Submit" class = "btn btn-primary" />
				
					</div>
				</div>
			</form>
